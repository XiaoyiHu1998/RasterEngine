{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build RasterEngine",
			"command": "F:\\TDM-GCC\\bin\\g++.exe",
			"args": [
				"-g",
				"${workspaceFolder}\\source\\*.cpp",
				"-o",
				"${workspaceFolder}\\bin\\RasterEngine.exe",

				/*Include Paths*/
				"-I${workspaceFolder}\\dependencies\\include",
				
				/*Library Paths*/
				"-L${workspaceFolder}\\dependencies\\libraries",

				/*Vendor Paths*/
				"${workspaceFolder}\\dependencies\\vendor\\imgui\\*.cpp",

				/*libraries*/
				"-lglfw3",
				"-lglew32s",
				"-lopengl32",
				"-lUser32",
				"-lGdi32",
				"-lShell32",
				
				//32bit binary
				"-m32",

				//c++17
				"-std=c++17"
			],
			"options": {
				"cwd": "${workspaceFolder}",
				"shell": {
					"executable": "D:\\Cygwin\\bin\\mintty.exe",
					"args": []
				}
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}